@using Users_App.Controllers;
@using Users_App.Models;
@model UsersViewModel

@{
    ViewBag.Title = "Edit User";
    ViewBag.MembershipList = UsersController.MembershipList();
}

@using (Html.BeginForm("Edit", "Users", FormMethod.Post, new { autocomplete = "off" }))
{
    <fieldset>
        <legend>Personal information:</legend>
        @Html.HiddenFor(m => m.UserId)
        Password:<br />
        @Html.PasswordFor(m => m.Password, new { maxlength = 30 })<br />
        @Html.ValidationMessageFor(m => m.Password)<br />
        Confirm Password:<br />
        @Html.PasswordFor(m => m.ConfirmPassword, new { maxlength = 30 })<br />
        @Html.ValidationMessageFor(m => m.ConfirmPassword)<br />
        First Name:<br />
        @Html.TextBoxFor(m => m.FirstName, new { maxlength = 30 })<br />
        @Html.ValidationMessageFor(m => m.FirstName)<br />
        Last Name:<br />
        @Html.TextBoxFor(m => m.LastName, new { maxlength = 30 })<br />
        @Html.ValidationMessageFor(m => m.LastName)<br />
        Gender:<br />
        @Html.RadioButtonFor(m => m.GenderId, 1)Male&nbsp;
        @Html.RadioButtonFor(m => m.GenderId, 2)Female<br />
        @Html.ValidationMessageFor(m => m.GenderId)<br />
        Membership:<br />
        @Html.DropDownListFor(m => m.MembershipId, new SelectList(ViewBag.MembershipList, "Value", "Text"), "Select Membership")<br />
        @Html.ValidationMessageFor(m => m.MembershipId)<br />
        <input type="submit" value="Submit" />
    </fieldset>
}

@section CSS{
    <link rel="stylesheet" href="~/Content/register-styles.css" />
}

@section JavaScript{
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js" defer></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js" defer></script>
}
